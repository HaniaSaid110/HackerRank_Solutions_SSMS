select name + '(' + left(occupation, 1) + ')'
from occupations
order by name;
select concat('There are a total of ', count(*), ' ' + lower(occupation) + 's.')
from occupations
group by occupation
order by count(*), occupation;

--another answer

select concat(name, '(', left(occupation, 1), ')')
from occupations
order by name;
select concat('There are a total of ', count(*), ' ' + lower(occupation) + 's.')
from occupations
group by occupation
order by count(*), occupation;

--Note: use CONCAT instead of a plus symbol when using functions as COUNT
